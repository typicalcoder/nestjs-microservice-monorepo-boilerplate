{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/core/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/core/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.i18n",
            "outDir": "dist/apps/auth",
            "watchAssets": true
          }
        ]
      }
    },
    "bootstrap": {
      "type": "library",
      "root": "libs/bootstrap",
      "entryFile": "index",
      "sourceRoot": "libs/bootstrap/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bootstrap/tsconfig.lib.json"
      }
    },
    "core": {
      "type": "application",
      "root": "apps/core",
      "entryFile": "main",
      "sourceRoot": "apps/core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.i18n",
            "outDir": "dist/apps/core",
            "watchAssets": true
          }
        ]
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.i18n",
            "outDir": "dist/apps/gateway",
            "watchAssets": true
          }
        ]
      }
    },
    "microservice": {
      "type": "library",
      "root": "libs/microservice",
      "entryFile": "index",
      "sourceRoot": "libs/microservice/src",
      "compilerOptions": {
        "tsConfigPath": "libs/microservice/tsconfig.lib.json"
      }
    },
    "sms": {
      "type": "application",
      "root": "apps/sms",
      "entryFile": "main",
      "sourceRoot": "apps/sms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sms/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.i18n",
            "outDir": "dist/apps/users",
            "watchAssets": true
          }
        ]
      }
    }
  }
}