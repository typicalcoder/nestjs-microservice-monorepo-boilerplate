{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "lib": [
      "ES2021"
    ],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "target": "ES2021",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@microservice": [
        "libs/microservice/src"
      ],
      "@microservice/*": [
        "libs/microservice/src/*"
      ],
      "@bootstrap": [
        "libs/bootstrap/src"
      ],
      "@bootstrap/*": [
        "libs/bootstrap/src/*"
      ],
      "axios": [
        "./node_modules/axios"
      ]
    },
    "inlineSources": true,
    "sourceRoot": "/"
  }
}